{
  "editor.rulers": [
    140
  ],
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true
  },
  "editor.formatOnSave": true, // auto format the file on each save
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "npm", // change to npm if you use npm
  "eslint.quiet": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
